<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mb_red"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ivNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ivLogo"
        android:layout_toRightOf="@+id/ivLogo"
        android:text="Quote of the Day"
        android:textStyle="bold"
        android:textColor="@color/text_color_white"
        android:textSize="17dp"
        android:visibility="visible"/>
   <TextView
       android:id="@+id/tvQuotesdata"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ivNotificationTitle"
       android:layout_toEndOf="@+id/ivLogo"
       android:layout_toRightOf="@+id/ivLogo"
       android:textColor="@color/text_color_white"
       android:text="NOtification NOtification NOtification NOtificationNOtificationNOtificationNOtification NOtification"
       android:padding="5dp"
       android:visibility="gone"
       />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_margin_small"
        android:antialias="true"
        android:src="@mipmap/ic_launcher"/>


</RelativeLayout>